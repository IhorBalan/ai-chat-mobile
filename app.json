{
  "expo": {
    "name": "ai-chat-mobile",
    "slug": "ai-chat-mobile",
    "version": "1.0.0",
    "scheme": "aichatmobile",
    "platforms": ["ios", "android", "web"],
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#080F1A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aichatmobile.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#080F1A"
      },
      "package": "com.aichatmobile.app"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": ["expo-router"]
  }
}
